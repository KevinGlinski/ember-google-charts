{{#paper-sidenav-container}}

  {{#paper-sidenav
    class='md-sidenav-left md-whiteframe-z2'
    lockedOpen=true
  }}

    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}

        <div class="logo-wrapper">
          <h2 id="title">
            {{#link-to 'index'}}
              <img src="ember.png" class="logo" height="30"/>
              <span class="text">&nbsp;Google Charts</span>
            {{/link-to}}
          </h2>
        </div>

      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-content}}
      {{#paper-list}}

        {{#paper-item onClick=(action 'transitionTo' 'chart-types.area')}}
          Area charts
        {{/paper-item}}

        {{#paper-item onClick=(action 'transitionTo' 'chart-types.bar')}}
          Bar charts
        {{/paper-item}}

        {{#paper-item onClick=(action 'transitionTo' 'chart-types.geo')}}
          Geo charts
        {{/paper-item}}

        {{#paper-item onClick=(action 'transitionTo' 'chart-types.line')}}
          Line charts
        {{/paper-item}}

        {{#paper-item onClick=(action 'transitionTo' 'chart-types.pie')}}
          Pie charts
        {{/paper-item}}

        {{#paper-item onClick=(action 'transitionTo' 'chart-types.scatter')}}
          Scatter charts
        {{/paper-item}}

        {{#paper-item onClick=(action 'transitionTo' 'promises')}}
          Promises
        {{/paper-item}}

        {{paper-divider}}

        {{#paper-item onClick=(action 'linkTo' 'https://github.com/sir-dunxalot/ember-google-charts')}}
          {{paper-icon 'code'}}
          <p>View Source on Github</p>
        {{/paper-item}}

        {{#paper-item onClick=(action 'linkTo' 'https://developers.google.com/chart/interactive/docs/')}}
          {{paper-icon 'info-outline'}}
          <p>Google Charts Docs</p>
        {{/paper-item}}

      {{/paper-list}}
    {{/paper-content}}

  {{/paper-sidenav}}

  {{#paper-card-content class='flex'}}

  {{#paper-toolbar}}
    {{#paper-toolbar-tools}}
    {{/paper-toolbar-tools}}
  {{/paper-toolbar}}

    <div class="page-content">
      {{outlet}}
    </div>
  {{/paper-card-content}}


{{/paper-sidenav-container}}
